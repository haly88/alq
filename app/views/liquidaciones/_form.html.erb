<%= render 'contrato_refresh' %>
<div id="liquidacion_ajax_refresh">
<% if @liquidacion.contratos_item_id %>
  <%= simple_form_for @liquidacion, html: {id: 'form_principal'} do |f| %>
    <%= f.error_notification %>
    <%= f.error :base %>
    <div class="form-inputs">
      <%= f.hidden_field :contrato_id %>
      <%= f.hidden_field :contratos_item_id %>
      <%= f.hidden_field :inquilino_id %>
      <%= f.hidden_field :fecha %>
      <%= render 'item_info' %>
      <div class="row" id="liquidacion_totales">
        <div class="columns medium-2">
          <%= label_tag 'Neto a Pagar' %>
          <%= text_field_tag 'liquidacion_totales_neto', @liquidacion.contratos_item.get_a_pagar, readonly: true, class: "decimal" %>
        </div>
        <div class="columns medium-2">
          <%= label_tag 'Mora' %>
          <%= text_field_tag 'liquidacion_totales_mora', @liquidacion.get_mora, readonly: true, class: "decimal" %>
        </div>
        <div class="columns medium-2 end">
          <%= label_tag 'Total a Pagar' %>
          <%= text_field_tag 'liquidacion_totales_total', @liquidacion.get_total_a_pagar, readonly: true, class: "decimal" %>
        </div>
      </div>
      <div class="row">
        <%= f.input :neto %>
        <%= f.input :mora %>
        <%= f.input :descuento %>
        <%= f.input :total, readonly: true %>
      </div>
    </div>
  <% end %>
<% end %>
</div>