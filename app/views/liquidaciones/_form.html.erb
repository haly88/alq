<%= render 'contrato_refresh' %>
<div id="liquidacion_ajax_refresh">
<% if @liquidacion.contratos_item_id %>
  <%= simple_form_for @liquidacion, html: {id: 'form_principal'} do |f| %>
    <%= f.error_notification %>
    <%= f.error :base %>
    <div class="form-inputs">
      <%= f.hidden_field :contrato_id %>
      <%= f.hidden_field :contratos_item_id %>
      <%= f.hidden_field :inquilino_id %>
      <%= f.hidden_field :fecha %>
      <%= render 'item_info' %>
      <div class="row">
        <%= f.input :neto %>
        <%= f.input :mora %>
        <%= f.input :descuento %>
        <%= f.input :total, readonly: true, label: 'Total a Pagar' %>
      </div>
    </div>
  <% end %>
  <div id="impuestos_modal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" aria-hidden="true" role="dialog">
    <%= simple_form_for @contrato, html: {id: 'form_impuestos'}, remote: true do |f| %>
      <%= f.simple_fields_for :contratos_impuestos do |f| %>
        <%= render "contratos/contratos_impuestos_fields", :f => f %>
      <% end %>
    <%= link_to '<i class="fa fa-2x fa-floppy-o"></i>'.html_safe, '#', title: "Guardar", id: "impuestos_guardar" %>
    <% end %>
  </div>
<% end %>
</div>
