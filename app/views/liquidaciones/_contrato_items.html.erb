<div class="row">
  <div class="columns medium-2"><%= label_tag "fecha" %></div>
  <div class="columns medium-2"><%= label_tag "monto" %></div>
  <div class="columns medium-2 end"><%= label_tag "saldo" %></div>
</div>
<% @contrato_items.each do |c| %>
<div class="row">
	<div class="columns medium-2">
    <%= text_field_tag 'contrato_items_fecha_desde', c.fecha_desde, readonly: true, class: "date" %>
	</div>
	<div class="columns medium-2">
    <%= text_field_tag 'contrato_items_monto', c.monto, readonly: true, class: "decimal contrato_items_monto" %>
	</div>
	<div class="columns medium-2 end">
    <%= text_field_tag 'contrato_items_saldado', c.saldado, readonly: true, class: "decimal contrato_items_saldado" %>
	</div>
</div>
<% end %>