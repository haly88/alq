<div class="row contratos_items_row">
	<div class="columns medium-2">
		<%= f.text_field :fecha_desde, label: "", :class => 'datepicker contratos_items_fecha_desde' %>
	</div>
	<div class="columns medium-2">
		<%= f.text_field :monto, label: "", :class => 'currency contratos_items_monto' %>
	</div>
	<div class="columns medium-2">
		<%= f.text_field :get_cobrado, label: "", readonly: true, :class => 'currency contratos_items_pago' %>
	</div>
	<div class="columns medium-1 end">
		<%= f.hidden_field :_destroy, :class => 'contratos_items_destroy' %>
		<%= link_to '<i class="fa fa-2x fa-trash-o"></i>'.html_safe, '#', :class => 'quitar_campos' %>
	</div>
</div>

