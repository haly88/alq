<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= controller_name+' - '+action_name %></title>

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= stylesheet_link_tag "https://cdn.datatables.net/1.10.10/css/dataTables.foundation.min.css" %>
    <%= stylesheet_link_tag "https://cdn.datatables.net/buttons/1.1.0/css/buttons.foundation.min.css" %>
    <%= stylesheet_link_tag "https://cdn.datatables.net/colreorder/1.3.0/css/colReorder.foundation.min.css" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= javascript_include_tag "application", 'data-turbolinks-track' => true %>
    <%= javascript_include_tag "https://cdn.datatables.net/1.10.10/js/jquery.dataTables.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/1.10.10/js/dataTables.foundation.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/buttons/1.1.0/js/dataTables.buttons.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/buttons/1.1.0/js/buttons.foundation.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/buttons/1.1.0/js/buttons.html5.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/buttons/1.1.0/js/buttons.print.min.js" %>
    <%= javascript_include_tag "https://cdn.datatables.net/colreorder/1.3.0/js/dataTables.colReorder.min.js" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render "layouts/general/spinner" %>
    <%= render "layouts/general/globales" %>
    <%= render "layouts/general/top_bar" %>
    <%= render "layouts/general/comentarios_modal" %>
    <%= render "layouts/general/filtros_modal" %>

    <% if notice %>
      <div data-alert id="data-alert" class="alert-box success">
        <%= notice %>
      </div>
    <% end %>
    <div class="row">
      <div class="panel panel_forms">
        <%= yield %>
      </div> 
    </div>
    <div class="row footer">
      <%= controller_path + '-' + action_name %>
    </div>
  </body>
</html>