<%= form_for(@persona) do |f| %>
  <%= render "shared/errors", modelo: @persona %>
  <div class="field">
    <%= f.label :codigo %><br>
    <%= f.text_field :codigo %>
  </div>
  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </div>
  <div class="field">
    <%= f.label :activo %><br>
    <%= f.check_box :activo %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :es_inquilino %><br>
    <%= f.check_box :es_inquilino %>
  </div>
  <div class="field">
    <%= f.label :es_propietario %><br>
    <%= f.check_box :es_propietario %>
  </div>
  <div class="field">
    <%= f.label :es_garante %><br>
    <%= f.check_box :es_garante %>
  </div>
  <div class="field">
    <%= f.label :es_otro %><br>
    <%= f.check_box :es_otro %>
  </div>
  <div class="field">
    <%= f.label :telefono %><br>
    <%= f.text_field :telefono %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :direccion %><br>
    <%= f.text_field :direccion %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
